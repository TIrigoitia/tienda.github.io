<p id="notice"><%= notice %></p>

<div class="text-center">
  <div class="card mb-3" style="max-width: 1080px;">
   <div class="row g-0">
     <div class="col-md-4">
      <%if @product.image.attached?%>
        <%=image_tag @product.image, class:"img-fluid rounded-start w-100 h-100"%>
        <%else%>
          <%= image_tag "no_image.png",class:'img-fluid rounded-start w-100 h-100', style: 'height:50vw;width:100vw;margin-bottom:20px;' %>
        <%end%>
     </div>
     <div class="col-md-8">
       <div class="card-body">
         <h5 class="card-title"><%= @product.name %></h5>
         <ul class="list-group list-group-flush">
            <li class="list-group-item">Descripcion: <%= @product.description %></li>
            <li class="list-group-item">Marca: <%= @product.brand %></li>
            <li class="list-group-item">Modelo: <%= @product.model %></li>
            <li class="list-group-item">Precio: <%= @product.price %></li>
            <li class="list-group-item">Stock: <%= @product.stock %></li>
         </ul>
        </div>
      </div>
    </div>
  </div>
       <div class="text-center mt-3"> 
           <%= link_to 'Atras', admin_products_path, class:'btn btn-outline-secondary' %>
       </div>
</div>
