<p id="notice"><%= notice %></p>

<div class="text-center">
  <h1>Mis Productos</h1>
</div>
  <div class="text-center mb-3">
    <%= link_to 'Agregar Producto', new_product_path , class:'btn btn-outline-success'%>
  </div>
  <div card="card" style="padding:1%">
  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Precio</th>
        <th scope="col">Modelo</th>
        <th scope="col">Marca</th>
        <th scope="col">Descripcion</th>
        <th scope="colspan-3" style="width:10%"></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td ><%= product.name%></td>
          <td>$<%= product.price.to_i%></td>
          <td><%= product.model %></td>
          <td><%= product.brand %></td>
          <td><%= product.description %></td>
          <td><div class="btn-group" role="group">
            <%= link_to 'Detalles', admin_show_product_path(:id => product.id), class:'btn btn-outline-primary' %>
            <%= link_to 'Editar', edit_product_path(product),class:'btn btn-outline-primary' %>
            <%= link_to 'Eliminar', product ,method: :delete, data: {confirm:'Â¿Esta seguro?'}, class:'btn btn-outline-danger'%>
          </div></td>
        </tr>
      <% end %>
      </tbody>
    </table>
</div>

<div class="text-center">
<%= link_to 'Atras', admin_index_path, class:'btn btn-outline-secondary mt-3'%>
</div>