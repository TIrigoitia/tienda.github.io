<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="card">
  <div class="card-header">
    <div class="text-center">Inicio de sesion</div>
  </div>
  <div class="card-body">
  

  <div class="form-control">
  <div class="input-group mb-3">
    <span class="input-group-text mb-3">Email</span>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-3" %>    
  </div>
  <div class="input-group mb-3">
    <span class="input-group-text mb-3">Contrase√±a</span>
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control mb-3" %>
  </div>
  <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me, class:'"form-check-input mb-3"'%>
      <%= f.label :remember_me, class: 'mb-3'%>

  <% end %>

  <div class="d-grid">
    <%= f.submit "Ingresar" , class:'btn btn-lg btn-success btn-login fw-bold mb-2' %>
  </div>
  <div class="d-grid">
      <%= render "devise/shared/links" %>
  </div>
<% end %>
  </div>
</div>

